<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add header"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/remove_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove header"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add footer"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/remove_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove footer"
            android:layout_weight="1"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>